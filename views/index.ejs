<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Available Gigs</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background: #f0f2f5;
      color: #333;
    }
    header {
      background: #343a40;
      color: white;
      padding: 1rem;
      text-align: center;
    }
    header img {
      height: 50px;
      margin-bottom: 10px;
    }
    .hero {
      background: url('https://via.placeholder.com/1200x300?text=Freelance+Writing+Gigs') no-repeat center;
      background-size: cover;
      height: 300px;
      display: flex;
      justify-content: center;
      align-items: center;
      color: white;
      font-size: 2rem;
      font-weight: bold;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }
    .gigs {
      max-width: 800px;
      margin: 30px auto;
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      justify-content: center;
    }
    .gig-card {
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      overflow: hidden;
      width: 300px;
      display: flex;
      flex-direction: column;
    }
    .gig-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
    }
    .gig-card .content {
      padding: 15px;
      flex: 1;
    }
    .gig-card .content h3 {
      margin: 0 0 8px;
      font-size: 1.2rem;
    }
    .gig-card .description {
      font-size: 0.9rem;
      color: #555;
      white-space: pre-line; /* to allow multi-line text */
      margin-bottom: 10px;
    }
    .gig-card a {
      background: #28a745;
      color: white;
      text-align: center;
      padding: 10px;
      text-decoration: none;
      display: block;
      transition: background 0.3s;
    }
    .gig-card a:hover {
      background: #218838;
    }
    footer {
      text-align: center;
      padding: 20px;
      background: #343a40;
      color: white;
      margin-top: 30px;
    }
  </style>
</head>
<body>
  <header>
    <img src="/images/logo.jpg" alt="Logo" style="height:50px;">

    <h1>Freelance Writer Gigs</h1>
  </header>
  <div class="hero">
    Find Your Next Writing Opportunity
  </div>
  <main class="gigs">
    <% gigs.forEach(g => { %>
      <div class="gig-card">
        <% if (g.file && (g.file.endsWith('.jpg') || g.file.endsWith('.png') || g.file.endsWith('.jpeg'))) { %>
          <img src="<%= g.file %>" alt="Gig Image">
        <% } else if (g.file) { %>
          <div style="padding:10px;">
            <a href="<%= g.file %>" target="_blank">View Attached Document</a>
          </div>
        <% } else { %>
          <img src="https://via.placeholder.com/300x150?text=Writing+Gig" alt="Default">
        <% } %>
        <div class="content">
          <h3><%= g.title %></h3>
          <% if (g.description) { %>
            <div class="description"><%= g.description %></div>
          <% } %>
        </div>
        <a href="/bid/<%= g.id %>">Place Bid</a>
      </div>
    <% }) %>
  </main>
  <footer>
    &copy; 2025 WritersBid. All Rights Reserved.
  </footer>
</body>
</html>
